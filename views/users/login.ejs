<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post">
            <div class="mb-3">
                <label for="username" class="form-label"></label>Username</label>
                <input type="text" id="username" name="username" class="form-control" required placeholder="Enter Title">
                
                <div class="valid-feedback" >Looks good</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label"></label>password</label>
                <input type="password" id="password" name="password" class="form-control" required placeholder="Enter Title">
                
                <div class="valid-feedback" >Looks good</div>
            </div>
            <button class="btn btn-dark">Login</button>
        </form>

    </div>
</div>